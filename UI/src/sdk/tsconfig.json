{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./sdk",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmitOnError": true
  },
  "include": [
    "sdk/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}